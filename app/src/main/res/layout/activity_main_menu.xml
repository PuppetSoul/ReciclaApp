<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/btnTrilhaSeguranca"
        android:layout_width="135dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:text="Trilha de segurança do trabalho"
        app:layout_constraintStart_toStartOf="@+id/BtnMainTrilha"
        app:layout_constraintTop_toBottomOf="@+id/BtnMainDescarteMap" />

    <Button
        android:id="@+id/btnMainAnuncios"
        android:layout_width="135dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:text="Compra de anúncios"
        app:layout_constraintStart_toStartOf="@+id/BtnMainDescarteMap"
        app:layout_constraintTop_toBottomOf="@+id/BtnMainClube" />

    <Button
        android:id="@+id/BtnMainClube"
        android:layout_width="135dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:text="clube de vantagens"
        app:layout_constraintStart_toStartOf="@+id/BtnMainDescarteMap"
        app:layout_constraintTop_toBottomOf="@+id/BtnMainDescarteMap" />

    <Button
        android:id="@+id/BtnMainTrilha"
        android:layout_width="135dp"
        android:layout_height="88dp"
        android:layout_marginEnd="16dp"
        android:text="Trilhas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BtnMainDescarteMap"
        app:layout_constraintTop_toTopOf="@+id/BtnMainDescarteMap" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="1000 XP"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Nome"
        app:layout_constraintStart_toStartOf="@+id/TextMENU"
        app:layout_constraintTop_toBottomOf="@+id/TextMENU" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="75dp"
        android:layout_height="88dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotipo" />

    <TextView
        android:id="@+id/TextMENU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Menu CPF"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <Button
        android:id="@+id/BtnMainDescarteMap"
        android:layout_width="135dp"
        android:layout_height="89dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Localize um ponto de descarte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider4" />

    <View
        android:id="@+id/divider4"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

</androidx.constraintlayout.widget.ConstraintLayout>